    <script>
// Referencias
const cfAudio = document.getElementById('cloudflareAudio');
const status = document.getElementById('status');

function updateStatus(message, type = 'success') {
    status.textContent = message;
    status.className = 'status-indicator';
    if (type === 'error') status.classList.add('status-error');
    if (type === 'warning') status.classList.add('status-warning');
}

// ============================================
// SISTEMA DE COMUNICACI√ìN CON OVERLAY
// ============================================

function sendCommandToOverlay(target, action, value = null) {
    const command = {
        target: target,
        action: action,
        value: value,
        timestamp: Date.now()
    };
    
    // Enviar comando via localStorage
    localStorage.setItem('overlayCommand', JSON.stringify(command));
    
    console.log('Comando enviado:', command);
}

// Escuchar respuestas del overlay
window.addEventListener('storage', function(e) {
    if (e.key === 'overlayStatus' && e.newValue) {
        try {
            const status = JSON.parse(e.newValue);
            updateStatus('üì° ' + status.message);
        } catch(err) {
            console.error('Error leyendo status:', err);
        }
    }
});

// ============================================
// YOUTUBE CONTROLS
// ============================================

function playYouTube() {
    sendCommandToOverlay('youtube', 'play');
    updateStatus('‚ñ∂Ô∏è YouTube: Play');
}

function pauseYouTube() {
    sendCommandToOverlay('youtube', 'pause');
    updateStatus('‚è∏Ô∏è YouTube: Pause');
}

function restartYouTube() {
    sendCommandToOverlay('youtube', 'restart');
    updateStatus('üîÅ YouTube: Reiniciando');
}

function setYouTubeVolume(value) {
    document.getElementById('ytVolumeValue').textContent = value;
    sendCommandToOverlay('youtube', 'volume', parseInt(value));
    updateStatus('üîä YouTube volumen: ' + value);
}

// ============================================
// CLOUDFLARE AUDIO CONTROLS
// ============================================

function playCloudflareAudio() {
    // Primero reproducir local para activar
    if (cfAudio) {
        cfAudio.play()
            .then(() => {
                // Luego enviar comando al overlay
                sendCommandToOverlay('cloudflare', 'play');
                updateStatus('‚ñ∂Ô∏è Audio Cloudflare reproduciendo');
            })
            .catch((error) => {
                updateStatus('‚úó Error: ' + error.message, 'error');
            });
    } else {
        // Solo enviar comando al overlay
        sendCommandToOverlay('cloudflare', 'play');
        updateStatus('‚ñ∂Ô∏è Comando enviado al overlay');
    }
}

function stopCloudflareAudio() {
    if (cfAudio) {
        cfAudio.pause();
        cfAudio.currentTime = 0;
    }
    sendCommandToOverlay('cloudflare', 'stop');
    updateStatus('‚èπÔ∏è Audio detenido');
}

function setCloudflareVolume(value) {
    document.getElementById('cfVolumeValue').textContent = value;
    
    if (cfAudio) {
        cfAudio.volume = value / 100;
    }
    
    sendCommandToOverlay('cloudflare', 'volume', parseInt(value));
    updateStatus('üîä Volumen: ' + value);
}

// ============================================
// GENERAL CONTROLS
// ============================================

function muteAll() {
    sendCommandToOverlay('general', 'muteAll');
    if (cfAudio) cfAudio.muted = true;
    updateStatus('üîá Todo silenciado');
}

function unmuteAll() {
    sendCommandToOverlay('general', 'unmuteAll');
    if (cfAudio) cfAudio.muted = false;
    updateStatus('üîä Audio activado');
}

// ============================================
// INIT
// ============================================

// Configurar audio inicial
if (cfAudio) {
    cfAudio.volume = 0.5;
}

updateStatus('‚úÖ Panel listo - Esperando overlay...');

// Verificar conexi√≥n con overlay
setTimeout(function() {
    sendCommandToOverlay('general', 'ping');
}, 1000);

console.log('Control Panel iniciado con localStorage');
console.log('Abre el overlay en otra pesta√±a del MISMO NAVEGADOR');
    </script>
